<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#48C9B0"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/iconologin"
            android:layout_marginTop="50dp"/>
        
        <EditText
            android:id="@+id/txtrfc"
            android:ems="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/clave_del_vector"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/iconopersona"
            android:paddingTop="20dp"
            android:padding="15dp"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/txtpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese RFC"
            android:inputType="textPassword"
            android:background="@color/white"
            android:drawableStart="@drawable/iconocandado"
            android:drawablePadding="5dp"
            android:padding="15dp"
            android:layout_margin="10dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresar"
            android:background="@color/white"
            android:layout_margin="10dp"
            android:padding="20dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>